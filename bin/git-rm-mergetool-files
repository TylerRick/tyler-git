#!/bin/sh
# See also/merge with: git rmversions

find_command="find . -type f -a \( -name '*[._]REMOTE[._]*' -o -name '*[._]LOCAL[._]*' -o -name '*[._]BASE[._]*' -o -name '*[._]BACKUP[._]*' \)"
eval $find_command

echo -n "Delete these files [y/n]? "
read x

if [ "$x" = "y" ]; then
	eval $find_command -a -exec rm '{}' '\;'
else
	echo 'Aborting...'
fi

find_command="find . -type f -a \( -name '*.orig' \)"
eval $find_command

echo -n "Delete these files [y/n]? "
read x

if [ "$x" = "y" ]; then
	eval $find_command -a -exec rm '{}' '\;'
else
	echo 'Aborting...'
fi
